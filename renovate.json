{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "hostRules": [
    {
      "encrypted": {
        "token": ""
      },
      "matchHost": "https://api.github.com"
    },
    {
      "encrypted": {
        "token": ""
      },
      "matchHost": "https://github.com/PJ-Schulz"
    }
  ],
  "ignoreTests": false,
  "includePaths": [
    "pyproject.toml"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "addLabels": [
        "major"
      ],
      "automerge": false,
      "matchUpdateTypes": [
        "major"
      ],
      "prBodyNotes": [
        ":warning: Major update, check for compatibility and merge manually"
      ]
    },
    {
      "addLabels": [
        "major"
      ],
      "automerge": false,
      "matchCurrentVersion": "/^v?0\\./",
      "matchUpdateTypes": [
        "minor"
      ],
      "prBodyNotes": [
        ":warning: Version 0.x.x, check for compatibility and merge manually"
      ]
    },
    {
      "automerge": true,
      "groupName": "dependencies",
      "matchCurrentVersion": "!/^v?0\\./",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "automerge": true,
      "groupName": "dependencies",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "addLabels": [
        "dev"
      ],
      "groupName": "dev-dependencies",
      "matchCurrentVersion": "!/^v?0\\./",
      "matchDepTypes": [
        "dev",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "addLabels": [
        "dev"
      ],
      "groupName": "dev-dependencies",
      "matchDepTypes": [
        "dev",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "addLabels": [
        "dev"
      ],
      "commitMessageTopic": "dev-dependency {{depName}}",
      "matchDepTypes": [
        "dev",
        "devDependencies"
      ]
    }
  ],
  "platformAutomerge": true,
  "prHourlyLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "schedule": [
    "every thursday between 12:00 am and 5:00 am"
  ],
  "timezone": "Europe/Berlin"
}