{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "hostRules": [
    {
      "matchHost": "https://github.com/PJ-Schulz",
      "encrypted": {
        "token": ""
      }
    },
    {
      "matchHost": "https://api.github.com",
      "encrypted": {
        "token": ""
      }
    }
  ],
  "rebaseWhen": "behind-base-branch",
  "ignoreTests": false,
  "timezone": "Europe/Berlin",
  "labels": ["renovate"],
  "platformAutomerge": true,
  "schedule": [
    "before 5am every weekday"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dev"],
      "matchFileNames": ["pyproject.toml"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"],
      "automerge": false
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchFileNames": ["pyproject.toml"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"],
      "automerge": false
    },
    {
      "matchDepTypes": ["dev"],
      "matchFileNames": ["pyproject.toml"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "addLabels": ["dev", "pepperize"],
      "matchPackagePatterns": ["^pepperize"],
      "groupName": "pepperize-dependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["dev"],
      "matchFileNames": ["pyproject.toml"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "addLabels": ["dev"],
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchFileNames": ["pyproject.toml"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}